@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewBag.Title = "Home Page";
}
@model WebApplicationTest.Models.Conversion 
<form method="post">
    <div>
        <label asp-for="InitialValue" class="form-label" ></label>
        <input asp-for="InitialValue" class="form-control w-25" type="number" />

        <span asp-validation-for="InitialValue" class="text-danger" ></span>
    </div>
    <div class="form-check form-check-inline">
        <label asp-for="FinalMetric" class="form-check-label" >Celsius</label>
        <input asp-for="FinalMetric" class="form-check-input"  type="radio" value="Celsius" />
    </div>

    <div class="form-check form-check-inline mt-2">
        <label asp-for="FinalMetric"  class="form-check-label" >Fahrenheit</label>
        <input asp-for="FinalMetric" class="form-check-input"  type="radio" value="Fahrenheit" />
    </div>
    <div>
        <span class="text-danger" asp-validation-for="FinalMetric"></span>
    </div>
     <div class="mt-2">
        <input class="btn btn-success" type="submit" value="Convertir" />
    </div>
</form>
<div class="mt-2">
    <a class="btn btn-primary" href="~/Home/History">Liste des conversions</a>
</div>